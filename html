  <h1>My C++ Projects</h1>
  <div id="fileList">Loading files...</div>

  <footer>Â© 2025 Your Name | <a href="https://github.com/YOUR-USERNAME">GitHub</a></footer>

  <script>
    const username = "YOUR-USERNAME";
    const repo = "cpp-projects";
    const apiUrl = https://api.github.com/repos/${username}/${repo}/contents;

    async function loadFiles() {
      const response = await fetch(apiUrl);
      const files = await response.json();

      const cppFiles = files.filter(f => f.name.endsWith(".cpp"));
      const container = document.getElementById("fileList");

      if (cppFiles.length === 0) {
        container.innerHTML = "<p>No C++ files found yet.</p>";
        return;
      }

      container.innerHTML = cppFiles
        .map(f => `
          <div class="file">
            <a href="${f.html_url}" target="_blank">${f.name}</a>
          </div>
        `)
        .join("");
    }

    loadFiles();
  </script>
</body>
